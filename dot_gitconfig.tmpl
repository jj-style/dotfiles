[user]
	name = {{ .git.name }}
	email = {{ .git.email }}

[init]
	defaultBranch = master

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
