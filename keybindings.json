// Place your key bindings in this file to override the defaults
[
    {
        "key": "alt+left",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+left",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "alt+right",
        "command": "workbench.action.navigateForward",
        "when": "canNavigateForward"
    },
    {
        "key": "ctrl+shift+-",
        "command": "-workbench.action.navigateForward",
        "when": "canNavigateForward"
    },
    {
        "key": "ctrl+alt+shift+t r",
        "command": "workbench.action.tasks.runTask",
        "args": "makeRun"
    },
    {
        "key": "ctrl+alt+shift+t b",
        "command": "workbench.action.tasks.runTask",
        "args": "makeBuild"
    },
    {
        "key": "ctrl+alt+shift+t t",
        "command": "workbench.action.tasks.runTask",
        "args": "makeTest"
    },
    {
        "key": "ctrl+alt+shift+t c",
        "command": "workbench.action.tasks.runTask",
        "args": "makeClean"
    },
    {
        "key": "ctrl+alt+shift+t l",
        "command": "workbench.action.tasks.runTask",
        "args": "makeLint"
    },
    {
        "key": "ctrl+alt+shift+g s",
        "command": "git.stageAll"
    },
    {
        "key": "ctrl+alt+shift+g c",
        "command": "git.commitAll"
    },
    {
        "key": "ctrl+alt+shift+g p",
        "command": "git.pushForce"
    },
    {
        "key": "ctrl+alt+shift+g l",
        "command": "git.pull"
    },
    {
        "key": "ctrl+alt+shift+g o",
        "command": "git.checkout"
    }
]